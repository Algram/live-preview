{
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "workspaces": ["packages/**"],
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "message": "chore(release): updated release notes and package versions [ci skip]",
      "ignoreChanges": [
        "**/*.spec.*",
        "**/__fixtures__/**",
        "**/__tests__/**",
        "yarn.lock",
        "lerna.json",
        ".eslintrc.js",
        ".eslintignore",
        ".prettierrc",
        "tsconfig.json",
        "commitlist.config.js"
      ]
    }
  }
}
